@model IEnumerable<RestauranteWeb.Models.FormaPagamentoModel>

@{
    ViewData["Title"] = "Formas de Pagamento";
}

<h2><i class="fa-solid fa-credit-card"></i> Formas de Pagamento</h2>
<p>
    <a asp-action="Create"><i class="fa-solid fa-plus"></i> Nova forma de pagamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)

        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pencil"></i> Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-ellipsis"></i> Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i> Deletar</a>
                </td>
            </tr>
        }
    </tbody>

</table>
