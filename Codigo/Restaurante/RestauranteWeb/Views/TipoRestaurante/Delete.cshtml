}

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Tipo de Restaurante</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
