@model IEnumerable<RestauranteWeb.Models.RestauranteModel>

@{
    ViewData["Title"] = "Restaurantes";
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
}

<h2><i class="fa-solid fa-store"></i> Restaurantes</h2>
<p>
    <a asp-action="Create"><i class="fa-solid fa-plus"></i> Novo Restaurante</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TipoRestauranteNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(_ => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.Cnpj)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.TipoRestauranteNome)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.Estado)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pencil"></i> Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-ellipsis"></i> Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i> Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }
    </ul>
</nav>