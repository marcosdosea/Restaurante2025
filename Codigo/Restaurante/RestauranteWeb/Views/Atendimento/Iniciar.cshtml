@model RestauranteWeb.Models.AtendimentoModel
@{
    ViewData["Title"] = "Iniciar Atendimento";
}
<div class="form-container">
    <div class="form-card-custom">
        <div class="card-header">
            <h4>Iniciar Atendimento</h4>
        </div>
        <form asp-action="Iniciar" method="post">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="IdMesa" class="form-label"></label>
                    <select asp-for="IdMesa" class="form-select" asp-items="ViewBag.Mesas">
                        <option value="">Selecione a mesa</option>
                    </select>
                    <span asp-validation-for="IdMesa" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Iniciar</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
