@model RestauranteWeb.Models.TipoFuncionarioModel

@{
    ViewData["Title"] = "Novo Tipo de Funcionário";
}

<div class="form-container">
    <div class="card form-card-custom">
        <div class="card-header">
            <h4>Novo Tipo de Funcionário</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-bold"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Garçom, Cozinheiro, Gerente" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    <input type="submit" value="Cadastrar" class="btn btn-primary create-button" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}