@model Core.Funcionario
@{
    ViewData["Title"] = "Detalhes do Funcionário";
}
<h2>Detalhes do Funcionário</h2>
<div>
    <h4>Funcionário</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Nome</dt>
        <dd class = "col-sm-10">@Model.Nome</dd>
        <dt class = "col-sm-2">CPF</dt>
        <dd class = "col-sm-10">@Model.Cpf</dd>
        <dt class = "col-sm-2">Função</dt>
        <dd class = "col-sm-10">@Model.IdTipoFuncionarioNavigation?.Nome</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
