@model RestauranteWeb.Models.FuncionarioModel
@{
    ViewData["Title"] = "Editar Funcionário";
}
<h2><i class="fa-solid fa-user-edit"></i> Editar Funcionário</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cpf" class="control-label"></label>
        <input asp-for="Cpf" class="form-control" />
        <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>
    <!-- outros campos -->
    <div class="form-group">
        <label asp-for="IdRestaurante" class="control-label">Restaurante</label>
        <select asp-for="IdRestaurante" class="form-control" asp-items="ViewBag.Restaurantes"></select>
        <span asp-validation-for="IdRestaurante" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdTipoFuncionario" class="control-label">Função</label>
        <select asp-for="IdTipoFuncionario" class="form-control" asp-items="ViewBag.TiposFuncionario"></select>
        <span asp-validation-for="IdTipoFuncionario" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-save"></i> Salvar</button>
</form>
<a asp-action="Index" class="btn btn-secondary mt-2"><i class="fa-solid fa-arrow-left"></i> Voltar à lista</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
